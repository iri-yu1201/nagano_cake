<div class="title">
  <h4>マイページ</h4>
</div>

<div class="form">
  <strong>登録情報</strong>
  <%= link_to "編集する", edit_customer_path(@customer.id), class: "btn btn-success" %>
</div>


<table border="1">
  <tr align="left">
    <td>氏名</td>
    <td><%= @customer.last_name %><%= @customer.first_name %></td>
  </tr>
  <tr align="left">
    <td>カナ</td>
    <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
  </tr>
  <tr align="left">
    <td>郵便番号</td>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr align="left">
    <td>住所</td>
    <td><%= @customer.address %></td>
  </tr>
  <tr align="left">
    <td>電話番号</td>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr align="left">
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
  </tr>

</table>

<div class="form">
  <strong>配送先</strong>
  <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
</div>

<div class="form">
  <strong>注文履歴</strong>
  <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
</div>