<h2>商品一覧</h2><h4>全件</h4>


<div class = "row">
  <% @items.each do |item| %>
    <div class = "col-3">
      <%= link_to item_path(item) do %>
        <%= attachment_image_tag item, :image, :fill, 200, 150, format:'jpeg' %>
      <% end %><br>
      <%= item.name %><br>
      ￥<%= item.price %>
    </div>
  <% end %>
</div>

