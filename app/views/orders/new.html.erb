<div class="title">
  <h4>注文情報入力</h4>
</div>


<h4><strong>支払方法</strong></h4>
<%= form_with model: @order, url: comfirm_orders_path, local:true do |f| %>
<div>
    <%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %>
    <%= f.label :payment_method, "クレジットカード" %><br>
    <%= f.radio_button :payment_method, :銀行振込 %>
    <%= f.label :payment_method, "銀行振込" %>
</div>

<div>
  <h4><strong>お届け先</strong></h4>
    <div>
      <%= f.radio_button :address, 0, checked: "checked" %>
      <%= f.label :address, "ご自身の住所" %><br>
      〒<%= current_customer.postal_code %><%= current_customer.address %><br>
      <%= current_customer.last_name %><%= current_customer.first_name %>
    </div>
    <div>
      <%= f.radio_button :address, 1 %>
      <%= f.label :address, "登録済住所から選択" %><br>
      <%= f.collection_select(:address, @addresses, :id, :address_info) %>
    </div>
    <div>
      <%= f.radio_button :address, 2 %>
      <%= f.label :address, "新しいお届け先" %>
        <div class="form-group">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
          <%= f.text_field :postal_code %>
        </div>
        <div class="form-group">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address %>
        </div>
        <div class="form-group">
          <%= f.label :name, "宛名" %>
          <%= f.text_field :name %>
        </div>
    </div>
    <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
</div>
<% end %>
