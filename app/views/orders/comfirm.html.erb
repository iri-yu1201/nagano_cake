<div class="title">
  <h4>注文情報確認</h4>
</div>
<div class="row">
  <div class="col-9">
    <table border="1", width="100%" >
      <tr>
        <td>商品名</td>
        <td>単価(税込)</td>
        <td>数量</td>
        <td>小計</td>
      </tr>
      <% sum=0 %>
      <% current_customer.cart_items.each do |cart_item| %>
      <tr>
        <th>
            <%= cart_item.item.name %>
        </th>
        <td><%= cart_item.item.price %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.item.price*cart_item.amount %></td>
      </tr>
      <% sum = sum+cart_item.item.price*cart_item.amount %>
      <% end %>
    </table>
  </div>

  <div class="col-3">
    <table border="1">
      <tr>
        <td>送料</td>
        <td><%= @order.shipping %></td>
      </tr>
      <tr>
        <td>商品合計</td>
        <td><%= sum %></td>
      </tr>
      <tr>
        <td>請求金額</td>
        <td><%= sum+@order.shipping %></td>
      </tr>
    </table>
  </div>
</div>

<div>
  <h4><strong>支払方法</strong></h4>
    <%= @order.payment_method %>>
  <h4><strong>お届け先</strong></h4>
    <%= @order.postal_code %><%= @order.address %><br>
    <%= @order.name %>
</div>


<%= link_to "注文を確定する", complete_orders_path, class: "btn btn-success" %>