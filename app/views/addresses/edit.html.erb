<div class="cation">
  <h4>配送先編集</h4>
</div>

<%= form_with model: @address, local:true do |f| %>
  <table>
    <tr>
      <td>郵便番号(ハイフンなし)</td> 
      <td><%= f.text_field @address.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field @address.address, style: "width: 270%;" %></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td><%= f.text_field @address.name %></td>
    </tr>
  </table>
  <%= f.submit "変更内容を保存", class: "btn btn-success" %>
<% end %>