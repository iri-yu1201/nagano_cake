<div class="cation">
  <h4>配送先登録/一覧</h4>
</div>

<%= form_with model: @address, local:true do |f| %>
  <table>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address, style: "width: 270%;" %></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td><%= f.text_field :name %></td>
    </tr>
  </table>
  <%= f.submit "新規登録", class: "btn btn-success btn-md" %>
<% end %>

  <table class="table table-bordered">
    <thead>
      <tr>
        <td>郵便番号</td>
        <td>住所</td>
        <td>宛名</td>
        <td></td>
      </tr>
    </thead>
    <% @addresses.each do |address| %>
    <tbody>
      <tr>
        <td>
          <%= address.postal_code %>
        </td>
        <td>
          <%= address.address %>
        </td>
        <td>
          <%=address.name %>
        </td>
        <td>
          <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
          <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger" %>
        </td>
      </tr>
    </tbody>
    <% end %>

  </table>