<h4 class="title" >注文履歴一覧</h4>

  <table class="table table-hover table-inverse" >
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>

    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= order.customer.name %></td>
        <td><%= order.order_items(:quantity) %></td>
        <td><%= order.status %></td>
      </tr>
    <% end %>
  </table>