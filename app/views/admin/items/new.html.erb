<div class="title">
  <h4>商品新規登録</h4>
</div>
<div class="row no-gutters">

  <div class="col-md-6 offset-md-3 pt-5">
    <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
      <table>
        <tr>
          <td><%= f.label :image_id, "商品画像" %></td>
          <td><%= f.attachment_field :image %></td>
        </tr>
        <tr>
          <td><%= f.label :name, "商品名" %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td><%= f.label :introduction, "商品説明" %></td>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <td><%= f.label :genre_id, "ジャンル" %></td>
          <td><%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "--選択してください--"}) %></td>
        </tr>
        <tr>
          <td><%= f.label :price, "税抜価格" %></td>
          <td><%= f.text_field :price %>円</td>
        </tr>
        <tr>
          <td><%= f.label :is_active, "販売ステータス" %></td>
          <td><%= f.radio_button :is_active, :true %>販売中<%= f.radio_button :is_active, :false %>販売停止中</td>
        </tr>
      </table>
        <%= f.submit "新規登録", class: "btn btn-success" %>
    <% end %>
  </div>
</div>