<h4 class="title">商品詳細</h4>
<div class="row">
  <div class="col-3">
    <%= attachment_image_tag @item, :image, :fill, 200, 150, format:'jpeg' %>
  </div>


  <div class="col-6">
    <table>
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <td>税込価格<br>
          (税抜価格)</td>
        <td><%= @item.add_tax_item_price.to_s(:dalimited) %>
          (<%= @item.price %>)円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <% if @item.is_active == true %>
          <td class="able">販売中</td>
        <% elsif @item.is_active == false %>
          <td class="enable">売り切れ</td>
        <% end %>
      </tr>
    </table>
    <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-sm btn-success" %>
  </div>
</div>