<div>
  <%= customer.name %>さんの会員詳細
</div>

<%= form_with model: @customer, local:true do |f| %>
  <%= f.label :id, "会員ID" %>
  <%= customer.id %>

  <%= f.label :create_name, "氏名" %>
  <%= f.text_field :first_name %>
  <%= f.text_field :last_name %>

  <%= f.label :create_name_kana, "フリガナ" %>
  <%= f.text_field :first_name_kana %>
  <%= f.text_field :last_name_kana %>

  <%= f.label :postal_code, "郵便番号" %>
  <%= f.text_field :postal_code %>

  <%= f.label :address, "住所" %>
  <%= f.text_field :address %>

  <%= f.label :telephone_number, "電話番号" %>
  <%= f.text_field :telephone_number %>

  <%= f.label :email, "メールアドレス" %>
  <%= f.text_field :email %>

  <%= f.label :is_active, "会員ステータス" %>
  <%= f.radio_button :is_active, "有効" %>有効<%= f.radio_button :is_active, "退会" %>退会

  <%= f.submit "変更を保存", class: "btn btn-success" %>