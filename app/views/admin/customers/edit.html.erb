<div class="title2">
  <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集
</div>

<%= form_with model: @customer, local:true do |f| %>
<table>
  <tr>
    <td><%= f.label :id, "会員ID" %></td>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <td><%= f.label :create_name, "氏名" %></td>
    <td><%= f.text_field :first_name %><%= f.text_field :last_name %></td>
  </tr>
  <tr>
    <td><%= f.label :create_name_kana, "フリガナ" %></td>
    <td><%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %></td>
  </tr>
  <tr>
    <td><%= f.label :postal_code, "郵便番号" %></td>
    <td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
    <td><%= f.label :address, "住所", style: "width: 80%;" %></td>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <td><%= f.label :telephone_number, "電話番号" %></td>
    <td><%= f.text_field :telephone_number %></td>
  </tr>
  <tr>
    <td><%= f.label :email, "メールアドレス" %>
    <td><%= f.text_field :email %>
  </tr>
  <tr>
    <td><%= f.label :is_active, "会員ステータス" %></td>
    <td><%= f.radio_button :is_active, "有効", checked: "checked" %>有効<%= f.radio_button :is_active, "退会" %>退会</td>
  </tr>
</table>
  <%= f.submit "変更を保存", class: "btn btn-success" %>
<% end %>